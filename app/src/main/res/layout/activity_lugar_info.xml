<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lucas.uecemap.LugarInfo">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/imageLugar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_insert_photo_black_36dp" />

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="63dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_place_black_36dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/item_title"
        android:id="@+id/textNome"
        android:layout_alignTop="@+id/item_icon"
        android:layout_toRightOf="@+id/item_icon"
        android:layout_alignRight="@+id/imageLugar"
        android:layout_alignEnd="@+id/imageLugar"
        android:layout_alignBottom="@+id/item_icon"
        android:textStyle="bold"
        android:textColor="#0a0e0f"
        android:gravity="center_vertical"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="63dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_help_black_24dp"
        android:layout_below="@+id/item_icon"
        android:layout_toLeftOf="@+id/textNome"
        android:layout_toStartOf="@+id/textNome"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/item_content"
        android:id="@+id/textDesc"
        android:textStyle="bold"
        android:textColor="#757b7d"
        android:gravity="center_vertical"
        android:textSize="25sp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignRight="@+id/textNome"
        android:layout_alignEnd="@+id/textNome"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="63dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_call_black_24dp"
        android:layout_below="@+id/imageView2"
        android:layout_toLeftOf="@+id/textNome"
        android:layout_toStartOf="@+id/textNome"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/item_title"
        android:id="@+id/textCont"
        android:textStyle="bold"
        android:textColor="#0a0e0f"
        android:gravity="center_vertical"
        android:textSize="30sp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/textNome"
        android:layout_alignStart="@+id/textNome"
        android:layout_marginTop="20dp" />

</RelativeLayout>
