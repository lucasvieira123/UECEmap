<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lucas.uecemap.LugarInfo"
    android:orientation="vertical"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:background="#2E2E2E">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageLugar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_insert_photo_black_36dp"
            android:layout_weight="0.2"
            android:adjustViewBounds="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="0.5">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutNome">
            <ImageView
                android:id="@+id/iconeNome"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_place_black_36dp"
                android:layout_alignBottom="@+id/textNome"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/item_content"
                android:id="@+id/textDesc"
                android:textColor="#167c9e"
                android:gravity="left|center_vertical"
                android:textSize="22sp"
                android:paddingLeft="25dp"
                android:paddingTop="5sp"
                android:layout_below="@+id/textNome"
                android:layout_toRightOf="@+id/iconeNome"
                android:layout_toEndOf="@+id/iconeNome" />
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutFrase">
        <ImageView
            android:id="@+id/iconeFrase"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_help_black_24dp"
            android:layout_below="@+id/imageLugar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/item_content"
                android:id="@+id/textNome"
                android:textColor="#167c9e"
                android:gravity="center_vertical|center_horizontal|left"
                android:textSize="22sp"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignBottom="@+id/imageLugar"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/iconeNome"
                android:paddingLeft="25sp" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutTelefone">

            <ImageView
                android:id="@+id/iconeTelefone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_call_black_24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/textCont"
                android:layout_alignTop="@+id/textCont" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/item_content"
                android:id="@+id/textCont"
                android:textColor="#088A08"
                android:textSize="22sp"
                android:phoneNumber="false"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingTop="5dp"
                android:layout_below="@+id/textDesc"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutHorarioFuncionamento" >

            <ImageView
                android:id="@+id/ImagemHorarioFuncionamento"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_schedule_black_24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/txtHorarioFuncionamento"
                android:layout_alignTop="@+id/txtHorarioFuncionamento" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/item_content"
                android:id="@+id/txtHorarioFuncionamento"
                android:textColor="#167c9e"
                android:textSize="22sp"
                android:phoneNumber="false"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingTop="5dp"
                android:layout_below="@+id/textDesc"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LayoutEmail" >

            <ImageView
                android:id="@+id/imagemEmail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_mail_outline_black_24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/txtHorarioFuncionamento"
                android:layout_alignTop="@+id/txtHorarioFuncionamento" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/item_content"
                android:id="@+id/txtEmail"
                android:textColor="#167c9e"
                android:textSize="22sp"
                android:phoneNumber="false"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingTop="5dp"
                android:layout_below="@+id/textDesc"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
