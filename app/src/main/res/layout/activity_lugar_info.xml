<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lucas.uecemap.LugarInfo">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="420dp"
        android:id="@+id/imageLugar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_insert_photo_black_36dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/item_title"
        android:id="@+id/textNome"
        android:textColor="#0a0e0f"
        android:gravity="center_vertical|center_horizontal|left"
        android:textSize="22sp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignBottom="@+id/imageLugar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView"
        android:paddingLeft="25sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/item_content"
        android:id="@+id/textDesc"
        android:textColor="#757b7d"
        android:gravity="left|center_vertical"
        android:textSize="18sp"
        android:paddingLeft="25dp"
        android:paddingTop="5sp"
        android:layout_below="@+id/textNome"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_place_black_36dp"
        android:layout_alignBottom="@+id/textNome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_help_black_24dp"
        android:layout_below="@+id/imageLugar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/item_content"
        android:id="@+id/textCont"
        android:textColor="#167c9e"
        android:textSize="18sp"
        android:phoneNumber="false"
        android:gravity="center_vertical"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:layout_below="@+id/textDesc"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_call_black_24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textCont"
        android:layout_alignTop="@+id/textCont" />

</RelativeLayout>
