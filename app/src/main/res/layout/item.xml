<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:background="#CCCC00">

    <!-- icon -->
    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_help_black_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- title -->
    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_icon"
        android:layout_above="@+id/item_counter"
        android:textSize="30sp"
        android:text="Título da Informação"/>

    <!-- counter -->
    <TextView
        android:id="@+id/item_content"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:gravity="center"
        android:textColor="#336600"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Conteúdo da informação"
        android:layout_alignBottom="@+id/item_icon"
        android:layout_alignRight="@+id/item_title"
        android:layout_alignEnd="@+id/item_title"
        android:layout_toRightOf="@+id/item_icon"
        android:layout_toEndOf="@+id/item_icon" />

</RelativeLayout>